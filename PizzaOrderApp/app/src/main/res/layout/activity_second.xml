<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:textColor="#447788"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tvOrderHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClientNumber  PizzaType  Nb.Slices Amount"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#931E43"
        android:background="#DCC069"
        />

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders : "
        app:layout_constraintTop_toBottomOf="@id/tvOrderHeading"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tvOrderHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="#8AC3DD"

        />

    <TextView
        android:id="@+id/tvTotalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TotalOrders : "
        app:layout_constraintTop_toBottomOf="@id/tvOrder"
        app:layout_constraintStart_toStartOf="@id/tvOrderHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#8AC3DD"
        />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        app:layout_constraintTop_toBottomOf="@id/tvTotalOrder"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>